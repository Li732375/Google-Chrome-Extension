{
  "manifest_version": 2,
  "name": "Getting started example",//擴充功能顯示名稱

  //功能簡述
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",//該擴充功能版本

  //定義行為
  "browser_action": {
    "default_icon": "icon.png",//擴充功能的icon
    "default_popup": "popup.html",//使用者點擊網址列旁的icon後，出現的POP視窗
    //實作功能的主要的操作邏輯y在JS檔，未記載在安裝檔裡，而是在popup.html裡載入
    "default_title": "Click here!"
  },

  //權限
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
